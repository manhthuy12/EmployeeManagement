<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            display: flex;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .sidebar {
            width: 250px;
            background-color: #2C3E50;
            padding-top: 20px;
            position: fixed;
            height: 100%;
            color: white;
        }

            .sidebar a {
                display: block;
                padding: 15px;
                text-decoration: none;
                color: white;
            }

                .sidebar a:hover {
                    background-color: #1ABC9C;
                }

        .content {
            margin-left: 250px;
            padding: 20px;
            width: 100%;
        }

        .sidebar h2 {
            text-align: center;
            padding: 15px;
            border-bottom: 1px solid #fff;
            margin: 0;
        }

        .user-info {
            text-align: center;
            padding: 15px;
            border-bottom: 1px solid #fff;
            margin-bottom: 15px;
        }

            .user-info img {
                border-radius: 50%;
                width: 80px;
                height: 80px;
                margin-bottom: 10px;
            }

            .user-info .username {
                font-size: 16px;
                font-weight: bold;
            }

            .user-info .role {
                font-size: 14px;
                color: #ccc;
            }
    </style>
</head>
<body>
    <div class="sidebar">
        <h2>QLNS</h2>

        <!-- Thông tin người dùng đăng nhập -->
        <div class="user-info">
            <img src="" alt="User Image" />
            <div class="username">@Session["Username"]</div>
            <div class="role">@Session["Role"]</div>
        </div>

        <!-- Menu -->
        <a href="@Url.Action("Index", "tb_EMPLOYEE")">Danh sách nhân viên</a>
        <a href="@Url.Action("Index", "tb_ACCOUNT")">Danh sách Tài Khoản</a>
        <a href="#">Quản lý phòng ban</a>
        <a href="#">Quản lý lương</a>
        <a href="#">Quản lý công tác</a>
        <a href="#">Nhóm nhân viên</a>
        <a href="#">Khen thưởng - Kỷ luật</a>
        <a href="#">Tài khoản</a>
    </div>

    <div class="content">
        <h2>@ViewBag.Title</h2>
        <div class="container body-content">
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
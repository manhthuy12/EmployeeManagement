@model IEnumerable<EmployeeManagement.Models.tb_ACCOUNT>

@{
    ViewBag.Title = "Danh sách tài khoản";
}

<h2 class="mt-4 mb-4">Danh sách tài khoản</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary mb-3">
        <i class="fa fa-plus"></i> Tạo mới
    </a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.tb_EMPLOYEE.FullName)</th>
            <th>@Html.DisplayNameFor(model => model.Username)</th>
            <th>@Html.DisplayNameFor(model => model.Password)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Role)</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.tb_EMPLOYEE.FullName)</td>
                <td>@Html.DisplayFor(modelItem => item.Username)</td>
                <td>@Html.DisplayFor(modelItem => item.Password)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Role)</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.AccountID })" class="btn btn-sm btn-warning">
                        <i class="fa fa-edit"></i>
                    </a> 
                    <a href="@Url.Action("Details", new { id = item.AccountID })" class="btn btn-sm btn-info">
                        <i class="fa fa-info-circle"></i>
                    </a> 
                    <a href="@Url.Action("Delete", new { id = item.AccountID })" class="btn btn-sm btn-danger">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
